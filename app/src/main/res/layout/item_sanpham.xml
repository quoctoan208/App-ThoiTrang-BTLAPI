<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@drawable/bogoc3">

    <ImageView
        android:id="@+id/img_itemanhsp"
        android:layout_width="139dp"
        android:layout_height="163dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_idsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id sản phẩm"
            android:textSize="20dp"
            android:textColor="#DD0A0A"/>

        <TextView
            android:id="@+id/tv_tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="tên sản phẩm"
            android:textColor="#1E88E5"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/tv_dongiasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="đơn giá sản phẩm"
            android:textColor="#000000"/>


    </LinearLayout>


</LinearLayout>